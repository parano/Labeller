<h2 style="margin-bottom: 20px" style='margin-top:60px'>Approved Jobs</h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="span3">Name</th>
      <th class="span3">Created at</th>
      <th class="span3">Number of Tasks</th>
      <th class="span3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @finishedjobs.each do |labeljob| %>
      <tr>
        <td><%= link_to labeljob.name, labeljob_path(labeljob) %></td>
        <td><%= labeljob.created_at %></td>
        <td><%= labeljob.labeltasks.count %></td>
        <td>
          <%= link_to 'Reveiw', review_labeljob_path(labeljob), :class => 'btn btn-warning' %>
          <%= link_to 'Delete', labeljob_path(labeljob), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
