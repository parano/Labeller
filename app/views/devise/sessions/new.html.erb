<%= form_for(resource, 
             :as => resource_name, 
             :url => session_path(resource_name),
             :html => { :class => "box" }) do |f| %>
  <fieldset>
    <legend>
      Sign in
    </legend>

   <div class="clearfix">
     <%= f.label :email %>
     <div class="input">
       <%= f.email_field :email %>
     </div>
   </div>

   <div class="clearfix">
     <%= f.label :password %>
     <div class="input">
       <%= f.password_field :password %>
     </div>
   </div>

   <% if devise_mapping.rememberable? -%>

     <div class="input">
       <div class="clearfix">
         <div class="inputs-list">
           <label for="remember_me">
             <%= f.check_box :remember_me %> 
             <span>remember me</span>
           </label>
         </div>
       </div>
     </div>

   <% end -%>

   <div class="actions">
     <%= f.submit "Sign in", :class => "btn primary" %>
   </div>

  </fieldset>
<% end %>

<%= render :partial => "devise/shared/links" %>
