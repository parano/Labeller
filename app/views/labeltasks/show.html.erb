<h3>Labeljob Name :
  <%= @labeljob.name %>
</h3>

<p style="margin-top:20px">
  <b>Task Status : </b>
  <%= status_label @labeltask.status %>:
  <span class="label label-success"><%= @labeltask.solutions.where("label!='unknow'").count %></span>/
  <span class="label label-info"><%= @labeltask.solutions.count %></span>
</p>

<p>
  <b>Owner : </b>
  <%= @owner.email %>
</p>

<p>
  <b>Description : </b>
  <%= @labeljob.desc %>
</p>

<p>
  <b>Deadline : </b>
  <%= @labeljob.deadline %>
</p>

<div>
  <%= render :partial => 'manage_table' %>
</div>

<p id="solutions">
  <%= will_paginate @solutions %>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Content</th>
        <% if @labeltask.editable?(current_user) %>
          <th>Actions</th>
        <% end %>
        <th>Solution</th>
      </tr>
    </thead>

    <tbody>
      <%= render @solutions %>
    </tbody>
  </table>
  <%= will_paginate @solutions %>
</p>

<div class="form-actions">
  <%= render :partial => 'manage_table' %>
</div>
